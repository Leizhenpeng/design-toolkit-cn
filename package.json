{
    "name": "design-tooltik-cn",
    "version": "1.0.0",
    "description": "基于国人使用体验的设计软件开发工具包",
    "main": "index.js",
    "type": "module",
    "engines": {
        "pnpm": "^7.8.0",
        "yarn": "forbidden, use pnpm",
        "npm": "forbidden, use pnpm",
        "node": ">=16"
    },
    "publishConfig": {
        "access": "public"
    },
    "packageManager": "pnpm@7.16.1",
    "scripts": {
        "build": "pnpm --filter kiss-core --filter kiss-msg --filter unplugin-kiss-config run build ",
        "in:mode:beta": "pnpm changeset pre enter beta",
        "out:mode:beta": "pnpm changeset pre exit beta",
        "changeset": "changeset",
        "bump": "changeset version",
        "release": "pnpm build && pnpm release:only",
        "release:only": "changeset publish --registry=https://registry.npmjs.com/",
        "test": "pnpm -r --workspace-concurrency=1 test",
        "lint": "eslint --ignore-path .gitignore '**/*.{js,ts,html,md}'",
        "lint:fix": "pnpm run lint --fix",
        "prepare": "husky install"
    },
    "keywords": [
        "figma",
        "mastergo",
        "jsdesign",
        "tooltik"
    ],
    "author": "RiverRay",
    "license": "MIT",
    "devDependencies": {
        "@antfu/eslint-config": "^0.36.0",
        "@changesets/changelog-github": "^0.4.8",
        "@changesets/cli": "^2.26.1",
        "@mastergo/plugin-typings": "^1.16.2",
        "@types/fs-extra": "^9.0.13",
        "@types/lodash-es": "^4.17.7",
        "@types/node": "^18.15.11",
        "eslint": "^8.37.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.0",
        "terser": "^5.16.8",
        "typescript": "^4.9.5",
        "vite": "^3.2.5",
        "vite-node": "^0.34.0",
        "vitest": "^0.34.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,html,md}": "eslint --fix"
    }
}
