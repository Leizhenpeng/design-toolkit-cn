{
    "compilerOptions": {
        "target": "esnext",
        "outDir": "dist",
        "useDefineForClassFields": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "allowJs": true,
        "types": ["vite/client", "vitest/importMeta"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "*.d.ts"],
    "exclude": ["**/*.spec.ts"]
}
